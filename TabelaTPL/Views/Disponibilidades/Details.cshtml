@model TabelaTPL.Models.Disponibilidade

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Disponibilidade</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Disponibilidade:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Disponibilidades)</dd>
            <dt class="col-sm-3">Voluntário:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Voluntarios.Name)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
        <a class="btn btn-sm btn-outline-primary" asp-action="Index">Voltar para a Lista</a>
    </div>
</div>

